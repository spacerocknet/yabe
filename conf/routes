# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# JSON
GET     /quiz/categories            controllers.Quiz.categories
GET     /quiz/quan/:qid             controllers.Quiz.details(qid: Long)

POST    /quiz/request               controllers.Quiz.quizRequest
POST    /quiz/game/result           controllers.Quiz.gameResult
POST    /quiz/save                  controllers.Quiz.save



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
